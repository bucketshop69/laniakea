# Main Solana RPC (for other modules)
VITE_SOLANA_RPC_ENDPOINT="https://mainnet.helius-rpc.com/?api-key=REPLACE_ME"

# Drift-specific RPC endpoint (can be different from main RPC)
VITE_DRIFT_RPC_ENDPOINT="https://devnet.helius-rpc.com/?api-key=REPLACE_ME"

# Drift Protocol Network: "devnet" or "mainnet-beta"
VITE_DRIFT_ENV="devnet"

# ==============================================================================
# Sanctum Gateway Configuration
# ==============================================================================
# Get your API key from https://sanctum.so
VITE_SANCTUM_API_KEY="your-sanctum-api-key-here"

# Optional: Custom Sanctum proxy URL (leave empty to use default Sanctum endpoint)
VITE_SANCTUM_PROXY_URL=""

# Solana Cluster for Sanctum: "devnet" or "mainnet-beta"
# Note: This should match your main cluster configuration
VITE_SOLANA_CLUSTER="mainnet-beta"

# ==============================================================================
# Supabase Configuration (Feed Module)
# ==============================================================================
VITE_SUPABASE_URL="https://yourproject.supabase.co"
VITE_SUPABASE_ANON_KEY="your-anon-key-here"
